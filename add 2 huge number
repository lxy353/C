 #include<iostream>
 #include<cmath>
 #include<string>
 #include<algorithm>
 using namespace std;
 string add(string num1, string num2){
      if(num1.length() < num2.length()){
                swap(num1, num2);
                }
       
       int carry = 0;
       string ans = " ";
       while(i>0 && j>0){
       int i = num1.length() - 1;
       int j = num2.length() - 1;
       int sum;
       sum =num1[i]-'0'+ num2[j]-'0' + carry;
       if (sum >= 10){
          carry =1;
          sum = num1[i]-'0'+ num2[j]-'0' + carry;
          }
       else{
       carry = 0;
       sum = num1[i]-'0'+ carry;
       }
        i--;
        j--;
 }
        if (carry ==1){
        ans = "1" +ans;
        }
       return ans;
 }
        
 int main(){
     string num1;
     string num2;
     cout << "Pls give me a number1:"<<endl;
     cin >> num1;
     cout << "Pls give me a number2:"<<endl;
     cin >> num2;
     cout << "sum:"<<add(num1,num2)<<endl;
     return 0;
     }
